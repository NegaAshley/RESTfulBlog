<% include partials/header %>
<div class="ui main text container segment">
    <h1 class="ui huge header">Edit <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Blog Content" required>
                <%= blog.body %>
            </textarea>
        </div>
        <input class="ui purple big basic button" type="submit">
    </form>
</div>
<% include partials/footer %>